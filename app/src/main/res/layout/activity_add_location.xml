<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLocation"
    android:background="@color/color2">

    <TextView
        android:id="@+id/venueAdd"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="Add a Custom Venue to Your Event"
        android:textColor="@color/color3"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/venue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Enter Your Venue"
        android:inputType="text"
        android:textColor="@color/color3"
        android:padding="20dp" />

    <TextView
        android:id="@+id/LocationBudgetAdd"
        android:layout_width="328dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="Or Enter Your Budget and Location and get Suggestions"
        android:textColor="@color/color3"
        android:textSize="24sp" />

    <Button
        android:id="@+id/add"
        android:layout_width="118dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/color3"

        android:text="Add"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/budgetForVenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Enter Your Budget For Venue"
        android:inputType="number"
        android:textColor="@color/color3"
        android:padding="20dp" />
    <EditText
        android:id="@+id/LocationDesired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Enter Your Desired Location For Venue"
        android:inputType="text"
        android:textColor="@color/color3"
        android:padding="20dp" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/color3"

        android:text="Search"
        android:textSize="24sp" />

</RelativeLayout>