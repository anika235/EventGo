<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    android:orientation="vertical"
    tools:context=".VenueDetails">
    <TextView
        android:id="@+id/venueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Hotel Intercontinental"
        android:textColor="@color/color3"
        android:textStyle="bold"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/venueLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Bangla Motor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/color3"
        android:layout_marginStart="90dp"
        />


    <ImageView
        android:id="@+id/venuePhoto"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="226dp"
        app:srcCompat="@drawable/intercontinental" />



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/venueRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Rent : "
        android:textColor="@color/color3"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:drawablePadding="20dp"
        android:textAlignment="center"
        android:inputType="text"
        android:textColor="@color/color3"
        android:textSize="24sp"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/venueGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Capacity : "
            android:textColor="@color/color3"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_marginEnd="14dp"
            android:background="@drawable/custom_input"
            android:ems="10"

            android:drawablePadding="20dp"
            android:inputType="text"
            android:textColor="@color/color3"
            android:textSize="24sp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/venueType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Types of Events that can be held :  "
        android:textColor="@color/color3"
        android:textSize="18sp"
        android:layout_marginEnd="14dp"
        />


        <TextView
            android:id="@+id/venueEvent"
            android:layout_width="373dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="20dp"
            android:ems="10"

            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/color3"
            android:textSize="24sp" />


</RelativeLayout>


    <Button
        android:id="@+id/addVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color3"

        android:text="Add this Venue to your Event"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"/>


</LinearLayout>