<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infosActivity"
    android:background="@color/color2">

    <TextView
        android:id="@+id/heading4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="Set up your event and start planning it"
        android:textColor="@color/color3"
        android:textSize="20sp" />



    <ImageView
        android:id="@+id/addLocation"
        android:layout_width="wrap_content"
        android:layout_height="264dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="14dp"
        app:srcCompat="@drawable/location" />

    <TextView
        android:id="@+id/locationString"
        android:layout_width="226dp"
        android:layout_height="132dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="170dp"
        android:text="Choose A Venue For Your Event"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/addBudget"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="14dp"


        app:srcCompat="@drawable/budget_event" />

    <TextView
        android:id="@+id/budgetString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="430dp"
        android:text="Plan Your Budget and Spend Money Wisely"
        android:textColor="@color/white"
        android:textSize="34sp" />



</RelativeLayout>