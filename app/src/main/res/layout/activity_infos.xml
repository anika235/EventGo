<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infosActivity"
    android:background="@color/color2">

    <TextView
        android:id="@+id/heading4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="Set up your event and start planning it"
        android:textColor="@color/color3"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Budget"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/color3" />

    <EditText
        android:id="@+id/guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Enter your Guest number"
        android:inputType="number"
        android:textColor="@color/color3"
        android:padding="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/color3"
        android:text="Start" />

    <ImageView
        android:id="@+id/addLocation"
        android:layout_width="wrap_content"
        android:layout_height="264dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="14dp"
        app:srcCompat="@drawable/location" />

    <TextView
        android:id="@+id/locationString"
        android:layout_width="226dp"
        android:layout_height="132dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="170dp"
        android:text="Choose A Venue For Your Event"
        android:textColor="@color/white"
        android:textSize="34sp" />


</RelativeLayout>