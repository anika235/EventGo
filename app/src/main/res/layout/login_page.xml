<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgcolor"
    android:layout_height="match_parent"
    tools:context=".login_page" >

    <TextView
        android:id="@+id/heading"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="EventGo"
        android:textColor="@color/color3"
        android:textSize="48sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_email_icon"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="20dp" />
    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_lock_icon"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:id="@+id/eye"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="335dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:text="OR"
        android:textColor="@color/color3"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="255dp"
        android:layout_marginTop="470dp"
        android:text="@string/forgotpass"
        android:textColor="@color/color3"
        android:textSize="14sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp"
        android:backgroundTint="@color/color3"
        android:text="Login"
        android:textColor="@color/white" />
    <LinearLayout
        android:id="@+id/continuegoogle"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/custom_input2"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="30dp">

        <ImageView
            android:layout_height="55dp"
            android:layout_width="55dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/google"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:gravity="center|center_horizontal"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="@color/color3"
            android:text="Google"
            android:textSize="24dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/continuefb"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:backgroundTint="#3F5C9A"
        android:background="@drawable/custom_input2"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="160dp">

        <ImageView
            android:layout_height="55dp"
            android:layout_width="55dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/anikafb2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:gravity="center|center_horizontal"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Facebook"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/noaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="600dp"
        android:text="Don't have an account?"
        android:textColor="@color/color3"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="OnClick" />
    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="269dp"
        android:layout_marginTop="600dp"
        android:text="@string/sign"
        android:textColor="@color/color3"
        android:textSize="16sp"

        android:textStyle="bold" />


</RelativeLayout>